<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#aa000000"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_act_picture_pen"
        android:layout_width="27px"
        android:layout_height="35px"
        android:background="@drawable/image_pen" />

    <ImageView
        android:layout_marginTop="54px"
        android:id="@+id/iv_act_picture_eraser"
        android:layout_width="38px"
        android:layout_height="21px"
        android:background="@drawable/image_eraser" />

</LinearLayout>