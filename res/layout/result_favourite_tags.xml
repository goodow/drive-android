<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/iv_favourite_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/favour_item_bg"/>

        <TextView
            android:id="@+id/tv_favourite_tags"
            android:layout_width="@dimen/common_result_yellow_width"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:minLines="2"
            android:padding="@dimen/common_result_yellow_padding"
            android:textSize="@dimen/common_result_yellow_textSize"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_toRightOf="@id/rl_item"
        android:id="@+id/iv_favourite_tags_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/favour_del_bg"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/favour_del"/>
    </FrameLayout>

</RelativeLayout>