<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/care_classes_bg" >

    <include layout="@layout/include_status" />
    <!-- 上下学期 -->
    <LinearLayout
        android:id="@+id/ll_care_classes_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="555px"
        android:layout_marginTop="34px"
        android:orientation="horizontal" >

        <com.goodow.drive.android.view.FontTextView
            android:id="@+id/ftv_term_0"
            style="@style/care_classes_term"
            android:checked="true"
            android:text="上" />

        <com.goodow.drive.android.view.FontTextView
            android:id="@+id/ftv_term_1"
            style="@style/care_classes_term"
            android:text="下" />
    </LinearLayout>
    <!-- 返回键 -->

    <Button
        android:id="@+id/bt_care_back"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_marginLeft="48px"
        android:layout_marginTop="122px"
        android:background="@drawable/common_selector_back" />
    <!-- 收藏键 -->

    <Button
        android:id="@+id/bt_care_coll"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_marginLeft="48px"
        android:layout_marginTop="222px"
        android:background="@drawable/common_selector_coll" />
    <!-- 不认识 -->

    <Button
        android:id="@+id/bt_care_loc"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_marginLeft="48px"
        android:layout_marginTop="322px"
        android:background="@drawable/common_selector_loc" />

    <!-- 一堆条目按钮 -->

    <LinearLayout
        android:id="@+id/ll_care_classes_topic"
        android:layout_width="258px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230px"
        android:layout_marginTop="90px"
        android:orientation="vertical" >

        <com.goodow.drive.android.view.FontTextView
            android:tag="0"
            android:id="@+id/ftv_care_button1"
            style="@style/care_classes_item" />

        <com.goodow.drive.android.view.FontTextView
            android:tag="1"
            android:id="@+id/ftv_care_button2"
            style="@style/care_classes_item" />

        <com.goodow.drive.android.view.FontTextView
            android:tag="2"
            android:id="@+id/ftv_care_button3"
            style="@style/care_classes_item" />

        <com.goodow.drive.android.view.FontTextView
            android:tag="3"
            android:id="@+id/ftv_care_button4"
            style="@style/care_classes_item" />

        <com.goodow.drive.android.view.FontTextView
            android:tag="4"
            android:id="@+id/ftv_care_button5"
            style="@style/care_classes_item" />

        <com.goodow.drive.android.view.FontTextView
            android:tag="5"
            android:id="@+id/ftv_care_button6"
            style="@style/care_classes_item" />

        <com.goodow.drive.android.view.FontTextView
            android:tag="6"
            android:id="@+id/ftv_care_button7"
            style="@style/care_classes_item" />

        <com.goodow.drive.android.view.FontTextView
            android:tag="7"
            android:id="@+id/ftv_care_button8"
            style="@style/care_classes_item" />

        <com.goodow.drive.android.view.FontTextView
            android:tag="8"
            android:id="@+id/ftv_care_button9"
            style="@style/care_classes_item" />
    </LinearLayout>

    <!-- 一堆云朵 MODIFY BY DPW order BY FROM LEFT TO RIGHT | FROM TOP TO BOTTOM-->
    <RelativeLayout
        android:id="@+id/rl_act_care_result_container"
        android:layout_width="690dp"
        android:layout_height="480dp"
        android:layout_marginLeft="520dp"
        android:layout_marginTop="110dp"
        >
        <!-- 左一 -->
        <Button
            android:id="@+id/bt_care_cloud1"
            style="@style/care_classes_cloud"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/cloud_yellow"
            />
        <!-- 左二 -->
        <Button
            android:id="@+id/bt_care_cloud2"
            style="@style/care_classes_cloud"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/cloud_yellow"
            />
        <!-- 左三 -->
        <Button
            android:id="@+id/bt_care_cloud3"
            style="@style/care_classes_cloud"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/cloud_blue"
            android:textColor="#333399"
            />
        <!-- 左四 -->
        <Button
            android:id="@+id/bt_care_cloud4"
            style="@style/care_classes_cloud"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="210dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/cloud_yellow"
            />
        <!-- 左五 -->
        <Button
            android:id="@+id/bt_care_cloud5"
            style="@style/care_classes_cloud"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/cloud_blue"
            android:textColor="#333399"
            />
        <!-- 右一 -->
        <Button
            android:id="@+id/bt_care_cloud6"
            style="@style/care_classes_cloud"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="150dp"
            android:background="@drawable/cloud_blue"
            android:textColor="#333399"
            />
        <!-- 右二 -->
        <Button
            android:id="@+id/bt_care_cloud7"
            style="@style/care_classes_cloud"
            android:layout_alignParentRight="true"
            android:layout_marginTop="60dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/cloud_yellow"
            />
        <!-- 右三 -->
        <Button
            android:id="@+id/bt_care_cloud8"
            style="@style/care_classes_cloud"
            android:layout_alignParentRight="true"
            android:layout_marginTop="220dp"
            android:layout_marginRight="140dp"
            android:background="@drawable/cloud_blue"
            android:textColor="#333399"
            />
        <!-- 右四 -->
        <Button
            android:id="@+id/bt_care_cloud9"
            style="@style/care_classes_cloud"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/cloud_yellow"
            />
        <Button
            android:id="@+id/bt_care_cloud10"
            style="@style/care_classes_cloud"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="140dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/cloud_blue"
            android:textColor="#333399"
            />
    </RelativeLayout>
</RelativeLayout>