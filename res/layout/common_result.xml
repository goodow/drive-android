<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_common_result"
        android:layout_width="@dimen/common_result_image_width"
        android:layout_height="@dimen/common_result_image_height" />

    <com.goodow.drive.android.view.MarqueeTextView
        android:textColor="#ffffff"
        android:textSize="@dimen/common_result_textSize"
        android:id="@+id/tv_common_result"
        android:layout_width="@dimen/common_result_text_width"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

</LinearLayout>