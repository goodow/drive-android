<?xml version="1.0" encoding="utf-8"?>
<!--级联菜单标题-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="700dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <!--挂载点-->
    <RelativeLayout android:id="@+id/rl_act_source_hierarchy_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#FF00FF">
        <CheckBox android:id="@+id/cb_act_source_hierarchy_title_status0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:button="@drawable/source_selector_mount"/>
        <CheckBox android:id="@+id/cb_act_source_hierarchy_title_status1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:button="@drawable/source_selector_mount"/>
    </RelativeLayout>
    <!--关键字-->
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFF00">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关键字  "
            android:textSize="18sp"
            android:textColor="#9d205a"/>
        <TextView android:id="@+id/tv_act_source_hierarchy_title_keys_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#ca310f"/>
    </LinearLayout>
</LinearLayout>
