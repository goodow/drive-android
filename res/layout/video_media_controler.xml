<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:gravity="center_vertical" 
	android:background="@drawable/video_shape_player_controller_bg"
	>
	<ImageButton
		android:id="@+id/ibtn_media_controler_play_pause" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:background="#00000000"
		android:layout_marginLeft="10.0dip" 
		android:layout_alignParentLeft="true" 
		android:layout_centerVertical="true" 
		/>
	<Button 
		android:id="@+id/btn_media_controler_sound" 
		android:background="@drawable/video_selector_player_soundenable" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_marginRight="10.0dip" 
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		/>
	<Button 
		android:id="@+id/btn_media_controler_brightness" 
		android:background="@drawable/video_selector_player_brightness"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_marginRight="15.0dip"
		android:layout_toLeftOf="@id/btn_media_controler_sound" 
		android:layout_centerVertical="true" 
		/>
	
	<RelativeLayout 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="5.0dip" 
		android:layout_marginTop="5.0dip" 
		android:layout_marginRight="15.0dip"
		android:layout_marginBottom="5.0dip" 
		android:layout_toLeftOf="@id/btn_media_controler_brightness" 
		android:layout_toRightOf="@id/ibtn_media_controler_play_pause"
		android:layout_centerVertical="true"
		>
		<TextView 
			android:id="@+id/tv_media_controler_duration"
			android:textSize="17.0sp" 
			android:textColor="@color/video_white" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="00:00"
			android:layout_alignParentRight="true"
			/>
		<TextView 
			android:textSize="17.0sp" 
			android:textColor="@color/video_white" 
			android:id="@+id/tv_media_controler_divider"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="/" 
			android:layout_toLeftOf="@id/tv_media_controler_duration"
			/>
		<TextView 
			android:textSize="17.0sp" 
			android:textColor="@color/video_white" 
			android:id="@+id/tv_media_controler_has_played"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_marginLeft="5.0dip"
			android:text="00:00" 
			android:layout_toLeftOf="@id/tv_media_controler_divider" />
		<SeekBar 
			android:id="@+id/sb_media_controler_seekbar" 
			android:paddingLeft="14.0dip" 
			android:paddingRight="14.0dip"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:layout_marginTop="5.0dip"
			android:layout_marginBottom="10.0dip" 
			android:maxHeight="10.0dip" 
			android:minHeight="10.0dip" 
			android:layout_toLeftOf="@id/tv_media_controler_has_played"
			android:layout_alignParentLeft="true"
			android:thumb="@drawable/video_selector_player_movie_seek_bar_thumb" 
			/>
<!-- 			android:progressDrawable="@drawable/player_movie_seek_bar" -->
	</RelativeLayout>
</RelativeLayout>