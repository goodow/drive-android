<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/iv_act_source_search_result_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        />
    <TextView
        android:id="@+id/tv_act_source_search_result_item_filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/case_item_bg"
        android:textColor="#000000"
        android:textSize="16sp"
        android:maxLines="2"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_act_source_search_result_item_icon"
        />

    <ImageView
        android:id="@+id/iv_act_source_search_result_item_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_act_source_search_result_item_icon"
        android:layout_alignLeft="@+id/iv_act_source_search_result_item_icon"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:layout_marginLeft="58dp"/>

</RelativeLayout>
