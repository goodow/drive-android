<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/index_bg"
    tools:context=".MainActivity" >

    <!-- 状态栏 -->
    <com.goodow.drive.android.view.StatusView
        style="@style/status" 
    />
    
    <!-- 收藏  锁定屏幕  设置  关机 -->
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/index_rl_sys_fun_layout_marginLeft"
        android:layout_marginTop="@dimen/index_rl_sys_fun_layout_marginTop"
        >
      <ImageView
          android:id="@+id/iv_act_main_coll"
          style="@style/index_sys_fun"
          android:src="@drawable/common_selector_coll"
          android:tag="收藏"
          />
      <ImageView
          android:id="@+id/iv_act_main_loc"
          style="@style/index_sys_fun"
          android:src="@drawable/common_selector_loc"
          android:layout_below="@+id/iv_act_main_coll"
          />
      <ImageView
          android:id="@+id/iv_act_main_set"
          style="@style/index_sys_fun2"
          android:src="@drawable/index_selector_set"
          android:layout_below="@+id/iv_act_main_loc"
          />
      <ImageView
          android:id="@+id/iv_act_main_clo"
          style="@style/index_sys_fun2"
          android:src="@drawable/index_selector_clo"
          android:layout_below="@+id/iv_act_main_set"
          />
    </RelativeLayout>
    
    
    <!-- 和谐  托班 -->
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/index_rl_har_ship_layout_marginLeft"
        android:layout_marginTop="@dimen/index_rl_har_ship_layout_marginTop"
        >
      <ImageView
          android:id="@+id/iv_act_main_har"
          style="@style/index_sys_harmany"
          android:src="@drawable/index_selector_har"
          android:tag="和谐"
          />
      <ImageView
          android:id="@+id/iv_act_main_ship"
          style="@style/index_sys_care"
          android:src="@drawable/index_selector_ship"
          android:layout_below="@+id/iv_act_main_har"
          android:tag="托班"
          />
    </RelativeLayout>

    <!-- 示范课程 -->
    <ImageView 
        android:id="@+id/iv_act_main_tech"
        style="@style/index_sys_fun"
        android:src="@drawable/index_selector_tech"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/index_rl_tech_layout_marginLeft"
        android:layout_marginTop="@dimen/index_rl_tech_layout_marginTop"
        android:tag="示范课"
        />

    <!-- 入学准备  智能开发  图画书 -->
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/index_rl_pre_smart_ebk_layout_marginTop"
        android:layout_marginRight="@dimen/index_rl_pre_smart_ebk_layout_marginRight"
        >
      <ImageView
          android:id="@+id/iv_act_main_pre"
          style="@style/index_sys_pre_edu_read"
          android:src="@drawable/index_selector_pre"
          android:tag="入学准备"
          />
      <ImageView
          android:id="@+id/iv_act_main_edu"
          style="@style/index_sys_pre_edu_read"
          android:src="@drawable/index_selector_edu"
          android:layout_below="@+id/iv_act_main_pre"
          android:tag="安全教育"
          />
      <ImageView
          android:id="@+id/iv_act_main_read"
          style="@style/index_sys_pre_edu_read"
          android:src="@drawable/index_selector_read"
          android:layout_below="@+id/iv_act_main_edu"
          android:tag="早期阅读"
          />
    </RelativeLayout>

    <ImageView
         android:id="@+id/iv_act_main_source"
          style="@style/index_sys_source"
          android:src="@drawable/index_source"
          android:tag="电子书"
          android:layout_alignParentRight="true"
          android:layout_alignParentBottom="true"
          android:layout_marginRight="@dimen/act_home_source_marginRight"
          android:layout_marginBottom="@dimen/act_home_source_marginBottom"
        />
</RelativeLayout>
