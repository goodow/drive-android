<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/care_classes_bg" >
    
    <!--  状态栏  -->
    <com.goodow.drive.android.view.StatusView
	style="@style/status" 
    />
    
    <!-- 上下学期 -->
    <LinearLayout
        android:id="@+id/ll_care_classes_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/act_care_term_marginLeft"
        android:layout_marginTop="@dimen/act_care_term_marginTop"
        android:orientation="horizontal" >

        <com.goodow.drive.android.view.FontTextView
            android:id="@+id/ftv_term_0"
            style="@style/care_classes_term"
            android:checked="true"
            android:text="上" />

        <com.goodow.drive.android.view.FontTextView
            android:id="@+id/ftv_term_1"
            style="@style/care_classes_term"
            android:text="下" />
    </LinearLayout>
    
    <!--  后退  收藏  锁屏  -->
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/act_harmony_fun_bar_marginLeft"
        android:layout_marginTop="@dimen/act_harmony_fun_bar_marginTop"
        >
        <include 
            android:id="@+id/bt_care_back"
            layout="@layout/include_back"/>
        <ImageView
          android:id="@+id/bt_care_coll"
          style="@style/index_sys_fun"
          android:src="@drawable/common_selector_coll"
          android:layout_below="@+id/bt_care_back"
          android:clickable="true"
          />
        <ImageView
          android:id="@+id/bt_care_loc"
          style="@style/index_sys_fun"
          android:src="@drawable/common_selector_loc"
          android:layout_below="@+id/bt_care_coll"
          android:clickable="true"
          />
    </RelativeLayout>

    <!-- 一堆条目按钮 -->

    <LinearLayout
        android:id="@+id/ll_care_classes_topic"
        android:layout_width="@dimen/act_care_topic_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/act_care_topic_marginLeft"
        android:layout_marginTop="@dimen/act_care_topic_marginTop"
        android:orientation="vertical" >

        <com.goodow.drive.android.view.FontTextView
            android:tag="0"
            android:id="@+id/ftv_care_button1"
            style="@style/care_classes_item" />

        <com.goodow.drive.android.view.FontTextView
            android:tag="1"
            android:id="@+id/ftv_care_button2"
            style="@style/care_classes_item" />

        <com.goodow.drive.android.view.FontTextView
            android:tag="2"
            android:id="@+id/ftv_care_button3"
            style="@style/care_classes_item" />

        <com.goodow.drive.android.view.FontTextView
            android:tag="3"
            android:id="@+id/ftv_care_button4"
            style="@style/care_classes_item" />

        <com.goodow.drive.android.view.FontTextView
            android:tag="4"
            android:id="@+id/ftv_care_button5"
            style="@style/care_classes_item" />

        <com.goodow.drive.android.view.FontTextView
            android:tag="5"
            android:id="@+id/ftv_care_button6"
            style="@style/care_classes_item" />

        <com.goodow.drive.android.view.FontTextView
            android:tag="6"
            android:id="@+id/ftv_care_button7"
            style="@style/care_classes_item" />

        <com.goodow.drive.android.view.FontTextView
            android:tag="7"
            android:id="@+id/ftv_care_button8"
            style="@style/care_classes_item" />

        <com.goodow.drive.android.view.FontTextView
            android:tag="8"
            android:id="@+id/ftv_care_button9"
            style="@style/care_classes_item" />
    </LinearLayout>

    <!-- 一堆云朵 MODIFY BY DPW order BY FROM LEFT TO RIGHT | FROM TOP TO BOTTOM-->
    <RelativeLayout
        android:id="@+id/rl_act_care_result_container"
        android:layout_width="@dimen/act_care_cloud_root_width"
        android:layout_height="@dimen/act_care_cloud_root_height"
        android:layout_marginLeft="@dimen/act_care_cloud_root_marginLeft"
        android:layout_marginTop="@dimen/act_care_cloud_root_marginTop"
        >
        <!-- 左一 -->
        <Button
            android:id="@+id/bt_care_cloud1"
            style="@style/care_classes_cloud"
            android:layout_marginLeft="@dimen/act_care_cloud_1_marginLeft"
            android:layout_marginTop="@dimen/act_care_cloud_1_marginTop"
            android:background="@drawable/cloud_yellow"
            />
        <!-- 左二 -->
        <Button
            android:id="@+id/bt_care_cloud2"
            style="@style/care_classes_cloud"
            android:layout_marginLeft="@dimen/act_care_cloud_2_marginLeft"
            android:layout_marginTop="@dimen/act_care_cloud_2_marginTop"
            android:background="@drawable/cloud_yellow"
            />
        <!-- 左三 -->
        <Button
            android:id="@+id/bt_care_cloud3"
            style="@style/care_classes_cloud"
            android:layout_marginLeft="@dimen/act_care_cloud_3_marginLeft"
            android:layout_marginTop="@dimen/act_care_cloud_3_marginTop"
            android:background="@drawable/cloud_blue"
            android:textColor="#333399"
            />
        <!-- 左四 -->
        <Button
            android:id="@+id/bt_care_cloud4"
            style="@style/care_classes_cloud"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/act_care_cloud_4_marginLeft"
            android:layout_marginBottom="@dimen/act_care_cloud_4_marginBottom"
            android:background="@drawable/cloud_yellow"
            />
        <!-- 左五 -->
        <Button
            android:id="@+id/bt_care_cloud5"
            style="@style/care_classes_cloud"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/act_care_cloud_5_marginLeft"
            android:layout_marginBottom="@dimen/act_care_cloud_5_marginBottom"
            android:background="@drawable/cloud_blue"
            android:textColor="#333399"
            />
        <!-- 右一 -->
        <Button
            android:id="@+id/bt_care_cloud6"
            style="@style/care_classes_cloud"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/act_care_cloud_6_marginTop"
            android:layout_marginRight="@dimen/act_care_cloud_6_marginRight"
            android:background="@drawable/cloud_blue"
            android:textColor="#333399"
            />
        <!-- 右二 -->
        <Button
            android:id="@+id/bt_care_cloud7"
            style="@style/care_classes_cloud"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/act_care_cloud_7_marginTop"
            android:layout_marginRight="@dimen/act_care_cloud_7_marginRight"
            android:background="@drawable/cloud_yellow"
            />
        <!-- 右三 -->
        <Button
            android:id="@+id/bt_care_cloud8"
            style="@style/care_classes_cloud"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/act_care_cloud_8_marginTop"
            android:layout_marginRight="@dimen/act_care_cloud_8_marginRight"
            android:background="@drawable/cloud_blue"
            android:textColor="#333399"
            />
        <!-- 右四 -->
        <Button
            android:id="@+id/bt_care_cloud9"
            style="@style/care_classes_cloud"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/act_care_cloud_9_marginRight"
            android:layout_marginBottom="@dimen/act_care_cloud_9_marginBottom"
            android:background="@drawable/cloud_yellow"
            />
        <Button
            android:id="@+id/bt_care_cloud10"
            style="@style/care_classes_cloud"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/act_care_cloud_10_marginRight"
            android:layout_marginBottom="@dimen/act_care_cloud_10_marginBottom"
            android:background="@drawable/cloud_blue"
            android:textColor="#333399"
            />
    </RelativeLayout>
</RelativeLayout>