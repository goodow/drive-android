<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_subtag_image"
        android:layout_width="@dimen/act_source_search_subtag_image_width"
        android:layout_height="@dimen/act_source_search_subtag_image_height"
        android:background="@drawable/source_selector_catagory1"/>

    <TextView
        android:id="@+id/tv_subtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333300"
        android:textSize="@dimen/act_source_search_subtag_textSize">
    </TextView>

</LinearLayout>