<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- launcher页面系统功能栏,收藏&&黑屏&&设置&&关机 -->
    <style name="index_sys_fun">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">onClick</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
    
    <!-- setting页面按钮style -->
    <style name="setting_bt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_item_bt_height</item>
        <item name="android:layout_marginTop">@dimen/setting_item_bt_spacing</item>
        <item name="android:background">@drawable/setting_item_bg</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/setting_item_bt_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 和谐页面班级样式 -->
    <style name="harmony_grade">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/harmony_selector_grade_term</item>
        <item name="android:background">@drawable/harm_selector_grade</item>
        <item name="android:button">@null</item>
    </style>
    
    <!-- 和谐页面类别样式 -->
    <style name="harmony_class">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/harmony_selector_class</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/harm_selector_class</item>
    </style>
    
</resources>
