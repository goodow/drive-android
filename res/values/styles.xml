<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- launcher页面系统功能栏,收藏&&黑屏 -->
    <style name="index_sys_fun">
        <item name="android:layout_width">@dimen/act_home_fun_width</item>
        <item name="android:layout_height">@dimen/act_home_fun_height</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">onClick</item>
        <item name="android:layout_marginBottom">@dimen/act_home_fun_margin</item>
    </style>
    
    <!-- 示范课页面后退,收藏,黑屏按钮 -->
    <style name="case_sys_fun" parent="index_sys_fun">
        <item name="android:layout_width">@dimen/act_case_fun_width</item>
        <item name="android:layout_height">@dimen/act_case_fun_height</item>
    </style>
    
    <!-- launcher页面系统功能栏,设置&&关机 -->
    <style name="index_sys_fun2" parent="index_sys_fun">
        <item name="android:layout_width">@dimen/act_home_fun2_width</item>
        <item name="android:layout_height">@dimen/act_home_fun2_height</item>
    </style>
    
    <!-- launcher页面和谐 -->
    <style name="index_sys_harmany" parent="index_sys_fun">
        <item name="android:layout_width">@dimen/act_home_harmany_width</item>
        <item name="android:layout_height">@dimen/act_home_harmany_height</item>
        <item name="android:layout_marginBottom">@dimen/act_home_har_care_margin</item>
    </style>
    
    <!-- launcher页面托班 -->
    <style name="index_sys_care" parent="index_sys_fun">
        <item name="android:layout_width">@dimen/act_home_care_width</item>
        <item name="android:layout_height">@dimen/act_home_care_height</item>
        <item name="android:layout_marginBottom">@dimen/act_home_har_care_margin</item>
    </style>
    
    <!-- launcher页面入学准备&安全教育&早期阅读 -->
    <style name="index_sys_pre_edu_read" parent="index_sys_fun">
        <item name="android:layout_width">@dimen/act_home_pre_edu_read_width</item>
        <item name="android:layout_height">@dimen/act_home_pre_edu_read_height</item>
        <item name="android:layout_marginBottom">@dimen/act_home_pre_edu_read_margin</item>
    </style>
    
    <!-- 课程辅助资源 -->
    <style name="index_sys_source" parent="index_sys_fun">
        <item name="android:layout_width">@dimen/act_home_source_width</item>
        <item name="android:layout_height">@dimen/act_home_source_height</item>
    </style>
    
    <!-- setting页面按钮style -->
    <style name="setting_bt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_item_bt_height</item>
        <item name="android:layout_marginTop">@dimen/setting_item_bt_spacing</item>
        <item name="android:background">@drawable/setting_item_bg</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/setting_item_bt_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 班级样式 -->
    <style name="harmony_grade">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/harmony_selector_grade_term</item>
        <item name="android:background">@drawable/common_selector_grade</item>
        <item name="android:button">@null</item>
    </style>
    
    <!-- 班级样式(new) -->
    <style name="style_common_grade">
        <item name="android:layout_width">@dimen/common_grade_width</item>
        <item name="android:layout_height">@dimen/common_grade_height</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/common_grade_textSize</item>
        <item name="android:textColor">@color/color_selector_common_grade_term</item>
        <item name="android:background">@drawable/common_selector_grade</item>
    </style>

    <!-- 和谐页面类别样式 -->
    <style name="harmony_class">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/harmony_selector_class</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/harm_selector_class</item>
    </style>
    
    <!-- 和谐页面类别样式(new) -->
    <style name="style_common_class">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_selector_common_class</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:background">@drawable/common_selector_class</item>
    </style>
    
    <!-- 安全教育教师用书班级样式 -->
    <style name="security_teacher_grade">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">50dp</item>
    </style>
    
    <!-- 安全教育幼儿用书班级样式 -->
    <style name="security_children_grade">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">37dp</item>
    </style>

    <!-- 图画书类别样式 -->
    <style name="ebook_class">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/harmony_selector_class</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/ebook_selector_topic</item>
    </style>
    
    <!-- 托班页面topic样式 -->
    <style name="care_classes_item">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">@dimen/act_care_topic_item_width</item>
        <item name="android:layout_height">@dimen/act_care_topic_item_height</item>
        <item name="android:layout_marginTop">@dimen/act_care_topic_item_margin</item>
        <item name="android:background">@drawable/care_selector_topic</item>
        <item name="android:textColor">@color/harmony_selector_class</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/act_care_topic_item_textSize</item>
    </style>

    <!-- 托班云朵样式 -->
    <style name="care_classes_cloud">
        <item name="android:background">@drawable/cloud_yellow</item>
        <item name="android:textSize">@dimen/act_care_cloud_textSize</item>
        <item name="android:textColor">#cc6600</item>
        <item name="android:layout_width">@dimen/act_care_cloud_width</item>
        <item name="android:layout_height">@dimen/act_care_cloud_height</item>
        <item name="android:paddingLeft">@dimen/act_care_cloud_paddingLeftRight</item>
        <item name="android:paddingTop">@dimen/act_care_cloud_paddingTop</item>
        <item name="android:paddingRight">@dimen/act_care_cloud_paddingLeftRight</item>
        <item name="android:visibility">gone</item>
        <item name="android:lines">2</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- 托班学期样式 -->
    <style name="care_classes_term">
        <item name="android:layout_width">@dimen/common_grade_width</item>
        <item name="android:layout_height">@dimen/common_grade_height</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">false</item>
        <item name="android:textSize">@dimen/common_grade_textSize</item>
        <item name="android:textColor">@color/harmony_selector_grade_term</item>
        <item name="android:background">@drawable/common_selector_grade</item>
        <item name="android:button">@null</item>
    </style>

    <!-- 资源库一级分类 -->
    <style name="source_catagory0">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">@dimen/act_source_catagory0_item_margin</item>
    </style>
    
    <!-- 状态栏位置 -->
    <style name="status">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/status_margin_top</item>
        <item name="android:layout_marginRight">@dimen/status_margin_right</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    
    <!-- 状态栏字体风格 -->
    <style name="status_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/status_text_size</item>
    </style>

</resources>
