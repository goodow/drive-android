<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- launcher页面系统功能栏,收藏&&黑屏&&设置&&关机 -->
    <style name="index_sys_fun">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">onClick</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
    
    <!-- setting页面按钮style -->
    <style name="setting_bt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_item_bt_height</item>
        <item name="android:layout_marginTop">@dimen/setting_item_bt_spacing</item>
        <item name="android:background">@drawable/setting_item_bg</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/setting_item_bt_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 和谐页面班级样式 -->
    <style name="harmony_grade">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/harmony_selector_grade_term</item>
        <item name="android:background">@drawable/harm_selector_grade</item>
        <item name="android:button">@null</item>
    </style>
    
    <!-- 和谐页面类别样式 -->
    <style name="harmony_class">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/harmony_selector_class</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/harm_selector_class</item>
    </style>
    
    <!-- 智能开发页面类别样式 -->
    <style name="smart_topic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/harmony_selector_class</item>
        <item name="android:button">@null</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:background">@drawable/smart_selector_topic</item>
    </style>

    <!-- 图画书类别样式 -->
    <style name="ebook_class">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/harmony_selector_class</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/ebook_selector_topic</item>
    </style>

    <!-- 入学准备页面类别样式 -->
    <style name="prepare_class">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/prepare_selector_topic</item>
    </style>
    
    <!-- 托班页面topic样式 -->
    <style name="care_classes_item">
        <item name="android:paddingRight">15px</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">258px</item>
        <item name="android:layout_height">60px</item>
        <item name="android:background">@drawable/care_classes_bg</item>
        <item name="android:textColor">@color/harmony_selector_class</item>
    </style>

    <!-- 托班云朵样式 -->
    <style name="care_classes_cloud">
        <item name="android:button">@null</item>
        <item name="android:textSize">16px</item>
        <item name="android:textColor">#cc6600</item>
        <item name="android:layout_width">126px</item>
        <item name="android:layout_height">83px</item>
        <item name="android:background">@drawable/cloud_yellow</item>
    </style>

    <!-- 托班学期样式 -->
    <style name="care_classes_term">
        <item name="android:layout_width">74px</item>
        <item name="android:layout_height">57px</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">false</item>
        <item name="android:textSize">18px</item>
        <item name="android:textColor">@color/harmony_selector_grade_term</item>
        <item name="android:background">@drawable/harm_selector_grade</item>
        <item name="android:button">@null</item>
    </style>
</resources>
